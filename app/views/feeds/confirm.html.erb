<h2 class="center">以下の内容で投稿しますか？</h2>
<div class="container">
  <%= form_with(model: @feed, url: feeds_path, local: true) do |form| %>
    <div class="row">
      <div class="col-md-3"></div>
        <div class="content col-md-6">
          <p>内容:<%= @feed.content %></p>
          <p>画像:<%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %></p>
          <%= form.hidden_field :image_cache %>
          <%= form.hidden_field :content %>
          <%= form.submit "投稿する" %>
  <% end %>
  <%= form_with(model:@feed, url:new_feed_path, local:true, method:"get") do |form| %>
      <%= form.hidden_field :image_cache %>
      <%= form.submit "戻る", name: "back" %>
        </div>
      <div class="col-md-3"></div>
    </div>
  <% end %>
</div>
