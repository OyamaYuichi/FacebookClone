<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>
<div class="container">
  <% @feeds.each do |feed| %>
    <div class="row">
      <div class="col-md-3"></div>
        <div class="content col-md-6">
          <p><%= feed.content %></p>
          <p><%= image_tag feed.image.url %></p>
        </div>
      <div class="col-md-3"></div>
    </div>
  <% end %>
</div>

<%= link_to '投稿する', new_feed_path %>
<%= link_to "ホームに戻る", feeds_path %>
