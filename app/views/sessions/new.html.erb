<h1 class="center">ログイン</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="content col-md-6">
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
        <p><%= f.label :メールアドレス %></p>
        <p><%= f.email_field :email %></p>
        <p><%= f.label :パスワード %></p>
        <p><%= f.password_field :password %></p>
        <p><%= f.submit "ログイン" %></p>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
